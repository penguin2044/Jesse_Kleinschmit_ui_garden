# Use Node.js base image
FROM node:18-alpine

# Set working directory (replace with YOUR last and first name)
WORKDIR /kleinschmit_jesse_ui_garden

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --silent
# Copy all source code
COPY . .

# Build the React app
RUN npm run build

# Install serve to host the build
RUN npm install -g serve

# Expose port 8083
EXPOSE 8083

# Start the app on port 8083
CMD ["serve", "-s", "build", "-l", "8083"]